<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dango.dangoaicodeapp.infrastructure.mapper.AppMapper">

    <!-- 游标分页查询应用列表 -->
    <select id="listAppByCursor" resultType="com.dango.dangoaicodeapp.domain.app.entity.App">
        SELECT * FROM app
        WHERE isDelete = 0
        <if test="tag != null and tag != ''">
            AND tag = #{tag}
        </if>
        <if test="searchText != null and searchText != ''">
            AND (appName LIKE CONCAT('%', #{searchText}, '%')
                 OR initPrompt LIKE CONCAT('%', #{searchText}, '%'))
        </if>
        <if test="lastId != null">
            AND id &lt; #{lastId}
        </if>
        ORDER BY id DESC
        LIMIT #{pageSize}
    </select>

    <select id="listAppWithDelete" resultType="com.dango.dangoaicodeapp.domain.app.entity.App">
        SELECT * FROM app WHERE updateTime >= #{minUpdateTime}
    </select>

</mapper>
